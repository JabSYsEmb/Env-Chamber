<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../../style/style.css"
            xmlns:fx="http://javafx.com/fxml/1"
            onKeyPressed="#onKeyPressedListener"
            fx:controller="com.imposters.team.controllers.burn.UnitTestsPingerController">
    <top>
        <AnchorPane styleClass="TitleBox"
                    onMousePressed="#setOnMousePressed"
                    onMouseDragged="#setOnMouseDragged">
            <children>
                <Text styleClass="TitleText"
                      layoutX="26.0"
                      layoutY="43.0"
                      text="Burn-In Tester"/>

                <Label fx:id="closeBtn"
                       styleClass="closeMinimizeBtns"
                       layoutX="960.0"
                       layoutY="0.0"
                       onMouseClicked="#onCloseClicked"
                       text="✖"/>

                <Label fx:id="minimizingBtn"
                       styleClass="closeMinimizeBtns"
                       layoutX="920.0"
                       layoutY="0.0"
                       onMouseClicked="#onMinimizingClicked"
                       text="➖"/>

            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane styleClass="windowMainStyle">
            <children>

                <AnchorPane fx:id="clockAnchor"
                            layoutX="30.0"
                            layoutY="30.0"
                            styleClass="BurnInclock">

                    <Label fx:id="clock"
                           text="00:00:00"
                           styleClass="clockLabel"
                           AnchorPane.topAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0"
                           AnchorPane.bottomAnchor="0.0"/>
                    <Label fx:id="massage"
                           text="Initialisierungsvorgang läuft..."
                           styleClass="BurnInTextStyle"
                           AnchorPane.topAnchor="65.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0"
                           AnchorPane.bottomAnchor="0.0"/>
                </AnchorPane>


                <Button fx:id="weiterBtn"
                        styleClass="button1"
                        layoutX="230"
                        layoutY="380.0"
                        onAction="#nextClicked"
                        text="Check in"/>

                <TextField fx:id="SlotTextField"
                           styleClass="textBoxLogin"
                           layoutX="30.0"
                           layoutY="200.0"
                           promptText="Slot"/>

                <TextField fx:id="BauteilIDTextField"
                           styleClass="textBoxLogin"
                           layoutX="30.0"
                           layoutY="240.0"
                           promptText="Bauteil-ID"/>

                <TextField fx:id="AuftragsnummerTextField"
                           styleClass="textBoxLogin"
                           layoutX="30.0"
                           layoutY="280.0"
                           promptText="Auftragsnummer"/>

                <Label fx:id="alertMessageBurnIn"
                       styleClass="alertMessage"
                       layoutX="30.0"
                       layoutY="175.0"/>

                <Button fx:id="FertigBtn"
                        styleClass="button1"
                        layoutX="272.0"
                        layoutY="320.0"
                        onAction="#startPingOverUnits"
                        text="Ping"/>

                <Button fx:id="entfernenBtn"
                        styleClass="button1"
                        layoutX="150.0"
                        layoutY="320.0"
                        onAction="#entfernenBtnClicked"
                        text="Entfernen"/>

                <Button fx:id="hinzufügenBtn"
                        styleClass="button1"
                        layoutX="30.0"
                        layoutY="320.0"
                        onAction="#hinzufügenBtnClicked"
                        text="Hinzufügen"/>
                <TableView fx:id="table"
                           layoutX="450.0"
                           layoutY="40.0">
                    <columns>
                        <TableColumn fx:id="slotNumber"
                                     prefWidth="100.0" text="Slot"/>
                        <TableColumn fx:id="serialNumOfTheUnitTest"
                                     prefWidth="150.0" text="Bauteil-ID"/>
                        <TableColumn fx:id="orderNumber"
                                     prefWidth="150.0" text="Auftragsnummer"/>
                        <TableColumn fx:id="status"
                                     prefWidth="78.0" text="status"/>
                    </columns>
                </TableView>


            </children>
        </AnchorPane>
    </center>
    <bottom>
        <AnchorPane styleClass="statusBar">

            <children>
                <Label fx:id="statusUser"
                       text="User"
                       styleClass="statusStyle"
                       AnchorPane.topAnchor="0.0"
                       AnchorPane.leftAnchor="5.0"
                       AnchorPane.rightAnchor="0.0"
                       AnchorPane.bottomAnchor="0.0"/>

                <Label fx:id="statusChamber"
                       text="Chamber info"
                       styleClass="statusStyle"
                       AnchorPane.topAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="5.0"
                       AnchorPane.bottomAnchor="0.0"/>

                <Label fx:id="statusAdmin"
                       text="Role"
                       styleClass="statusStyle"
                       AnchorPane.topAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0"
                       AnchorPane.bottomAnchor="0.0"/>
            </children>

        </AnchorPane>
    </bottom>
</BorderPane>
